---
// Props: widgetId (string)
const { widgetId } = Astro.props;
---
<div data-wally-widget={widgetId} style="width: 100%; height: 100%;"></div>
<script is:inline>
    if (!window.__wallyWidgetScriptLoaded) {
        const script = document.createElement('script');
        script.src = 'https://embed.getwally.net/embed.js';
        script.defer = true;
        document.body.appendChild(script);
        window.__wallyWidgetScriptLoaded = true;
    }
</script>

